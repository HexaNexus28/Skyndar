<UserControl x:Class="WPF.Views.Prestation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPF.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="950">

    <UserControl.Resources>
        <Style TargetType="Button" x:Key="RoundedButton">
            <Setter Property="Background" Value="#5271ff"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#7ba6fe" Offset="0"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Background="White" CornerRadius="15" Margin="20" Padding="20">
            <DockPanel LastChildFill="True">
                
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                    <Grid Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Content="Libellé :" Grid.Row="0" Grid.Column="0" Margin="5"/>
                        <TextBox x:Name="titre_pres" Grid.Row="0" Grid.Column="1" Margin="5" Text="{Binding Titre, UpdateSourceTrigger=PropertyChanged}" Width="200"/>

                        <Label Content="Durée :" Grid.Row="1" Grid.Column="0" Margin="5"/>
                        <TextBox x:Name="duree_pres" Grid.Row="1" Grid.Column="1" Margin="5" Text="{Binding Duree, UpdateSourceTrigger=PropertyChanged}" Width="200"/>

                        <Label Content="Tarif (€) :" Grid.Row="2" Grid.Column="0" Margin="5"/>
                        <TextBox x:Name="tarif_pres" Grid.Row="2" Grid.Column="1" Margin="5" Text="{Binding Tarif, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                    </Grid>

                    <Label Content="Description :" FontWeight="Bold" Margin="5"/>
                    <TextBox x:Name="descip_pres" Margin="5" Height="60" TextWrapping="Wrap" AcceptsReturn="True" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" Width="590">
                        <Button Content="Ajouter une prestation" Width="180" Margin="10" Click="Ajouter_Click" Style="{StaticResource RoundedButton}"/>
                        <Button Content="Modifier une prestation" Width="180" Margin="10" Click="Modifier_Click" Style="{StaticResource RoundedButton}"/>
                        <Button Content="Supprimer une prestation" Width="180" Margin="10" Click="Supprimer_Click" Style="{StaticResource RoundedButton}"/>
                    </StackPanel>
                </StackPanel>
                <DataGrid x:Name="dataGridView1" ItemsSource="{Binding Prestations}" SelectedItem="{Binding Select, Mode=TwoWay}" AutoGenerateColumns="False"  Height="300">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Titre" Binding="{Binding Titre}" Width="*"/>
                        <DataGridTextColumn Header="Tarif (€)" Binding="{Binding Tarif}" Width="*"/>
                        <DataGridTextColumn Header="Durée" Binding="{Binding Duree}" Width="*"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*"/>
                    </DataGrid.Columns>
                </DataGrid>

            </DockPanel>
        </Border>
    </Grid>
</UserControl>